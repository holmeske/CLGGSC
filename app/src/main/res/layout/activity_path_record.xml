<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <include layout="@layout/view_titlebar_blue"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebar">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="#70000000"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:text="陕A45675"/>

            <View
                android:layout_width="@dimen/divider_line"
                android:layout_height="17dp"
                android:background="@color/white"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0km"
                    android:textColor="#ffbd1d"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/total_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="/0km"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_line"
                android:layout_height="17dp"
                android:background="@color/white"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textColor="#ffbd1d"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="00-00"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line"
                android:background="#bbb"
                android:visibility="gone"/>

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:thumb="@drawable/ring"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/line"/>

            <ImageView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="click"
                android:src="@drawable/track_ico_play"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seekbar"/>

            <TextView
                android:id="@+id/day_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="#666"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/start"
                tools:text="05-07"/>

            <TextView
                android:id="@+id/day_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textColor="#666"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/start"
                tools:text="05-07"/>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/start"/>

            <TextView
                android:id="@+id/playback_time"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:textColor="#666"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"
                tools:text="回访时间:"/>

            <TextView
                android:id="@+id/day_before_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textColor="#5277df"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/playback_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/playback_time"
                tools:text="前七天"/>

            <View
                android:id="@+id/divider1"
                android:layout_width="@dimen/divider_line"
                android:layout_height="15dp"
                android:layout_marginRight="6dp"
                android:background="#666"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/playback_time"
                app:layout_constraintRight_toLeftOf="@id/day_before_seven"
                app:layout_constraintTop_toTopOf="@id/playback_time"/>

            <TextView
                android:id="@+id/day_before_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:textColor="#5277df"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/playback_time"
                app:layout_constraintRight_toLeftOf="@id/divider1"
                app:layout_constraintTop_toTopOf="@id/playback_time"
                tools:text="前三天"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="@dimen/divider_line"
                android:layout_height="15dp"
                android:layout_marginRight="6dp"
                android:background="#666"
                app:layout_constraintBottom_toBottomOf="@id/playback_time"
                app:layout_constraintRight_toLeftOf="@id/day_before_three"
                app:layout_constraintTop_toTopOf="@id/playback_time"/>

            <TextView
                android:id="@+id/day_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textColor="#5277df"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/playback_time"
                app:layout_constraintRight_toLeftOf="@id/divider2"
                app:layout_constraintTop_toTopOf="@id/playback_time"
                tools:text="自定义"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>