<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/width_m_height_w"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_typeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_typeName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_typeName"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_12"/>

        <ProgressBar
            android:id="@+id/color_progressBar"
            style="@style/billProgressBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/tv_typeName"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_line"/>
</LinearLayout>