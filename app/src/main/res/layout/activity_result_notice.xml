<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv"
        android:src="@drawable/precharge_fail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_recharge_result"
        android:text="支付失败"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/_444"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_recharge_des"
        android:textSize="15sp"
        android:textColor="@color/_666"
        android:text="支付金额稍后退回原账户，请再次尝试充值。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_back_home"
        android:text="返回首页"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/bg_blue_10"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="120dp"
        android:layout_height="35dp"/>
</LinearLayout>