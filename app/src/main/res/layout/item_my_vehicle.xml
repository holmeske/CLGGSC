<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_car_no"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="车牌号:沪A123456"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_car_vin"/>

    <TextView
        android:id="@+id/tv_car_vin"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="VIN码:JX000001"
        app:layout_constraintLeft_toRightOf="@+id/tv_car_no"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_car_position"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="车辆定位"
        android:textColor="#5277df"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_car_delete"
        app:layout_constraintTop_toBottomOf="@id/tv_car_no"/>

    <TextView
        android:id="@+id/tv_car_delete"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="删除车辆"
        android:textColor="#ff4949"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_car_position"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_car_no"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:background="#d7d7d7"
        app:layout_constraintTop_toTopOf="@id/tv_car_position"/>

    <View
        android:layout_width="@dimen/divider_line"
        android:layout_height="45dp"
        android:background="#d7d7d7"
        app:layout_constraintLeft_toRightOf="@id/tv_car_position"
        app:layout_constraintTop_toTopOf="@id/tv_car_position"/>
</androidx.constraintlayout.widget.ConstraintLayout>
