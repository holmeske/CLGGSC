<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_e4"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim440"
            android:background="@color/red"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dim20">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dim170"
                android:layout_height="@dimen/dim170"
                android:layout_marginTop="50dp"
                android:src="@drawable/default_head"
                app:civ_border_color="#00000000"
                app:civ_border_width="2dp"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/width_w_height_w"
                android:paddingTop="@dimen/dim10"
                android:textColor="@color/white"
                android:textSize="@dimen/txt40"
                tools:text="姓名"/>
        </LinearLayout>

        <LinearLayout
            style="@style/width_m_height_w"
            android:orientation="vertical">

            <tool.widget.ShapeTextView
                android:id="@+id/tv_change_password"
                style="@style/width_m_height_w"
                app:divider_color="@color/divider_line"
                android:background="@color/white"
                app:pressed_color="@color/state_pressed"
                android:drawableEnd="@drawable/jiankong_arrow"
                android:drawablePadding="@dimen/length_8"
                android:drawableRight="@drawable/jiankong_arrow"
                android:padding="@dimen/length_13"
                android:text="@string/change_password"
                android:textColor="@color/black_333"
                android:textSize="@dimen/textsize_14"/>

            <TextView
                android:id="@+id/tv_check_apk_update"
                style="@style/width_m_height_w"
                android:background="@drawable/selector_bg_divider"
                android:drawableEnd="@drawable/jiankong_arrow"
                android:drawablePadding="@dimen/length_8"
                android:drawableRight="@drawable/jiankong_arrow"
                android:padding="@dimen/length_13"
                android:text="@string/software_update"
                android:textColor="@color/black_333"
                android:textSize="@dimen/textsize_14"/>

            <TextView
                android:id="@+id/tv_custom_service"
                style="@style/width_m_height_w"
                android:background="@drawable/selector_bg_divider"
                android:drawableEnd="@drawable/jiankong_arrow"
                android:drawablePadding="@dimen/length_8"
                android:drawableRight="@drawable/jiankong_arrow"
                android:padding="@dimen/length_13"
                android:text="@string/custom_service"
                android:textColor="@color/black_333"
                android:textSize="@dimen/textsize_14"/>

            <TextView
                android:id="@+id/tv_about"
                style="@style/width_m_height_w"
                android:background="@drawable/selector_bg_divider"
                android:drawableEnd="@drawable/jiankong_arrow"
                android:drawablePadding="@dimen/length_8"
                android:drawableRight="@drawable/jiankong_arrow"
                android:padding="@dimen/length_13"
                android:text="@string/about_sc"
                android:textColor="@color/black_333"
                android:textSize="@dimen/textsize_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider_line"/>

            <TextView
                android:id="@+id/exitTxt"
                style="@style/width_m_height_w"
                android:background="@drawable/selector_bg_divider"
                android:drawableEnd="@drawable/jiankong_arrow"
                android:drawablePadding="@dimen/length_8"
                android:drawableRight="@drawable/jiankong_arrow"
                android:padding="@dimen/length_13"
                android:text="@string/logout"
                android:textColor="@color/black_333"
                android:textSize="@dimen/textsize_14"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
