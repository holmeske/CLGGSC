<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/map_lv"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/bg_kuang"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0.0dip"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0dip"
        android:listSelector="@drawable/bg_kuang_selecter"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/line_cancle"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/map_cancel_item_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_mapName"
            android:layout_width="wrap_content"
            android:layout_height="49.5dip"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/cancel_interval"
            android:textColor="@color/text_color_selecter2"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8.0dip"
        android:background="#30000000"
        android:gravity="center" >
    </LinearLayout>

</LinearLayout>