<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top"
        layout="@layout/view_titlebar"/>

    <LinearLayout
        android:id="@+id/search"
        style="@style/width_m_height_w"
        android:layout_margin="6dp"
        android:background="@drawable/selector_search_num"
        app:layout_constraintTop_toBottomOf="@id/top">

        <ImageButton
            style="@style/width_w_height_m"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/sousuo"/>

        <EditText
            android:id="@+id/et_account"
            style="@style/width_m_height_w"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/please_input_plate_numbers"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingBottom="@dimen/length_10"
            android:paddingLeft="@dimen/length_10"
            android:paddingStart="@dimen/length_10"
            android:paddingTop="@dimen/length_10"
            android:textColor="@color/color_text_0"
            android:textColorHint="@color/color_text_hint_0"
            android:textSize="@dimen/textsize_14"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:layout_marginTop="6dp"
        android:background="@color/grey_e4"
        app:layout_constraintTop_toBottomOf="@id/search"/>

    <TextView
        android:id="@+id/tv_chose_1"
        style="@style/width_w_height_w"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_search_car_status"
        android:enabled="false"
        android:padding="5dp"
        android:text="@string/all_truck"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_chose_2"
        app:layout_constraintTop_toBottomOf="@id/line"/>

    <TextView
        android:id="@+id/tv_chose_2"
        style="@style/width_w_height_w"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_search_car_status"
        android:padding="5dp"
        android:text="@string/on_the_road"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14"
        app:layout_constraintLeft_toRightOf="@id/tv_chose_1"
        app:layout_constraintRight_toLeftOf="@+id/tv_chose_3"
        app:layout_constraintTop_toTopOf="@id/tv_chose_1"/>

    <TextView
        android:id="@+id/tv_chose_3"
        style="@style/width_w_height_w"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_search_car_status"
        android:padding="5dp"
        android:text="@string/in_the_static"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14"
        app:layout_constraintLeft_toRightOf="@id/tv_chose_2"
        app:layout_constraintRight_toLeftOf="@+id/tv_chose_4"
        app:layout_constraintTop_toTopOf="@id/tv_chose_1"/>

    <TextView
        android:id="@+id/tv_chose_4"
        style="@style/width_w_height_w"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_search_car_status"
        android:padding="5dp"
        android:text="@string/disconnect"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14"
        app:layout_constraintLeft_toRightOf="@id/tv_chose_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_chose_1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tradeListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_e4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_chose_1"/>

    <LinearLayout
        android:id="@+id/linear_return_map"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/width_w_height_w"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/jiantou"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/jiantou"
            android:padding="5dp"
            android:text="@string/return_map_mode"
            android:textColor="@color/color_text_0"
            android:textSize="@dimen/textsize_16"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>