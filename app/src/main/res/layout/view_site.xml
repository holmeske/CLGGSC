<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="160dip"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="0dip"
            android:layout_height="20dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_14"
            tools:text="陕西宇顺汽车销售服务有限公司"/>

        <TextView
            android:id="@+id/company_instance"
            style="@style/width_w_height_w"
            android:layout_marginLeft="5.0dip"
            android:layout_marginStart="5dp"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/text_size_12"
            tools:text="10.5km"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5.0dip">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_position"
                    style="@style/width_w_height_w"
                    android:drawableLeft="@drawable/dingwei"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/dingwei"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_size_12"
                    tools:text="西安市未央区三桥镇阿房一路39号"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_phone"
                    style="@style/width_w_height_w"
                    android:drawableLeft="@drawable/dainhua"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/dainhua"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_size_12"
                    tools:text="029-84217707"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/width_w_height_w"
                    android:text="@string/connection_person"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/company_person"
                    style="@style/width_w_height_w"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_size_12"
                    tools:text="黄小姐(13654278954)"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="5dip"
            android:layout_marginStart="5dp"
            android:background="@color/divider_line"/>

        <LinearLayout
            android:id="@+id/line_detail"
            android:layout_width="55.0dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:background="@drawable/service_fujin"
                android:gravity="center"/>

            <TextView
                style="@style/width_w_height_w"
                android:layout_marginTop="2dip"
                android:text="@string/detail"
                android:textColor="#ff35adec"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="1.5dip"
        android:background="@color/divider_line"/>

    <LinearLayout
        android:id="@+id/line_map"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/bg_kuang_selecter"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_first_name"
            style="@style/width_w_height_w"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/dingwei2"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/dingwei2"
            android:gravity="center_vertical"
            android:text="@string/go_here"
            android:textColor="@color/text_color_selecter"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

</LinearLayout>