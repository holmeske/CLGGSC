<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sc.clgg.activity.vehiclemanager.tallybook.TallyActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">

        <ImageButton
            android:id="@+id/titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_top_icon_bg_day"
            android:contentDescription="@null"
            android:paddingEnd="@dimen/length_14"
            android:paddingLeft="@dimen/length_13"
            android:paddingRight="@dimen/length_14"
            android:paddingStart="@dimen/length_13"
            android:src="@drawable/arrow_left_white"/>

        <LinearLayout
            android:id="@+id/ll_tally_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center|center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titlebar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="160dp"
                android:text="支出"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <tool.widget.Triangle
                android:id="@+id/triangle"
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:layout_marginLeft="4dp"
                app:rotation="180"/>
        </LinearLayout>

        <TextView
            android:id="@+id/titlebar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_car_list_selector"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="10月24日"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="金额(元)"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="@null"
            android:hint="00.00"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@null"/>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        style="@style/who_mwh"
        android:background="#f6f5fa"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_line"
            android:layout_weight="1"
            android:background="@color/divider_line"/>

        <TextView
            android:id="@+id/tv_choose_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="请选择支出来源"
            android:textColor="@color/black_333"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_line"
            android:layout_weight="1"
            android:background="@color/divider_line"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_waybill"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f6f5fa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_angle_white"
            android:gravity="center"
            android:padding="10dp"
            android:text="保存"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>
