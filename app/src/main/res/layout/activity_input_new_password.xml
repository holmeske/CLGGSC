<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sc.clgg.activity.forgetpassword.ForgetPasswordActivity">

    <include layout="@layout/view_titlebar"/>

    <LinearLayout
        style="@style/width_m_height_w"
        android:layout_margin="10dp"
        android:background="@drawable/txj_login_right_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            style="@style/width_w_height_m"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/mima"/>

        <EditText
            android:id="@+id/et_new_password"
            style="@style/width_w_height_w"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="@string/please_input_new_password"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingEnd="@dimen/length_16"
            android:paddingLeft="@dimen/length_16"
            android:paddingRight="@dimen/length_16"
            android:paddingStart="@dimen/length_16"
            android:paddingTop="10dp"
            android:textColor="@color/color_text_0"
            android:textColorHint="@color/grey_e4"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_angle_red_50"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>
