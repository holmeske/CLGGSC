<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_1px"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="fill_parent"
        android:layout_height="145dip"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dip">

        <LinearLayout
            android:layout_width="106dip"
            android:layout_height="111dip"
            android:layout_marginLeft="5dip"
            android:layout_marginStart="5dp"
            android:background="@drawable/cover_shandow"
            android:gravity="center">

            <ImageView
                android:id="@+id/company_img"
                android:layout_width="105dip"
                android:layout_height="110dip"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/picture"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_marginLeft="@dimen/length_3"
            android:layout_marginStart="@dimen/length_3"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingStart="5dp">


            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/black_333"
                android:textSize="@dimen/textsize_15"
                tools:text="陕西宇顺汽车销售服务有限公司"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_instance"
                    style="@style/width_w_height_w"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_size_12"
                    tools:text="10.5km"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_position"
                    style="@style/width_w_height_w"
                    android:maxLines="1"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_12"
                    tools:text="西安市未央区三桥镇阿房一路39号"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_phone"
                    style="@style/width_w_height_w"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_size_12"
                    tools:text="029-84217707"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:orientation="horizontal"
                android:paddingBottom="2.5dip"
                android:paddingTop="2.5dip">

                <TextView
                    style="@style/width_w_height_w"
                    android:text="@string/connection_person"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10"/>

                <TextView
                    android:id="@+id/company_person"
                    style="@style/width_w_height_w"
                    android:layout_marginLeft="5dip"
                    android:layout_marginStart="5dp"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10"
                    tools:text="黄小姐(13654278954)"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line_tel"
            style="@style/wh_0m"
            android:background="@drawable/first_help_item_bg"
            android:clickable="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tel"
                style="@style/width_w_height_m"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="@string/first_tel"
                android:textColor="#666666"
                android:textSize="@dimen/textsize_13"/>
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/length_8"
            android:layout_marginTop="@dimen/length_8"
            android:background="#dcdcdc"/>

        <LinearLayout
            android:id="@+id/line_map"
            style="@style/wh_0m"
            android:background="@drawable/first_help_item_bg"
            android:clickable="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_map"
                style="@style/width_w_height_m"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="@string/first_map"
                android:textColor="#666666"
                android:textSize="@dimen/textsize_13"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dcdcdc"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_18"
        android:background="#f5f5f5"/>

    <TextView
        android:id="@+id/tv_loadmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_divider"
        android:gravity="center"
        android:padding="10dp"
        android:paddingBottom="@dimen/length_15"
        android:paddingTop="@dimen/length_15"
        android:text="@string/load_more"
        android:textColor="#666666"
        android:visibility="gone"/>

</LinearLayout>