<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_new_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_stroke"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="#aaa"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/titlebar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1234444555555"/>

    <EditText
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_stroke"
        android:hint="请输入短信验证码"
        android:inputType="number"
        android:maxEms="8"
        android:maxLength="8"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="#aaa"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/et_new_phone"
        tools:text="123456789"/>

    <EditText
        android:id="@+id/et_current_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_stroke"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="14"
        android:padding="10dp"
        android:textColorHint="#aaa"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/et_verification_code"/>

    <EditText
        android:id="@+id/et_invite_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_stroke"
        android:hint="*邀请码：推荐人的手机号（非必填）"
        android:maxLength="11"
        android:padding="10dp"
        android:textColorHint="#aaa"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/et_current_password"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_invite_code"/>

    <com.sc.clgg.widget.ShapeTextView
        android:id="@+id/tv_send"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginRight="2dp"
        android:background="#5277df"
        android:gravity="center"
        android:text="发送验证码"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:corners="2dp"
        app:layout_constraintBottom_toBottomOf="@id/et_verification_code"
        app:layout_constraintRight_toRightOf="@id/et_verification_code"
        app:layout_constraintTop_toTopOf="@id/et_verification_code"/>
</androidx.constraintlayout.widget.ConstraintLayout>