<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:background="@drawable/bg_white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:src="@drawable/apply_card_popup_x"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="车辆使用性质分为"
        android:textColor="@color/_444"
        android:textSize="24sp"
        android:typeface="sans"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="18dp"
        android:textStyle="bold"
        android:paddingEnd="18dp"
        android:text="营业货车、非营业货车"
        android:textColor="@color/_ee8031"
        android:textSize="15sp"
        android:typeface="sans"/>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:text="非营业货车:"
        android:textStyle="bold"
        android:textColor="@color/_444"
        android:textSize="13sp"
        android:typeface="sans"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:text="是指党政机关、企事业单位、社会团体自用或仅用于个人及家庭生活，不以直接或间接方式收取运费或租金的货车。"
        android:textColor="@color/_666"
        android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二型车:"
            android:textStyle="bold"
            android:paddingStart="18dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/_444"
            android:textSize="13sp"
            android:typeface="sans"/>

        <TextView
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是指用于货物运输或租赁，并以直接或间接方式收取运费或租金的货车。"
            android:textColor="@color/_666"
            android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_i_know"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:background="@drawable/bg_blue_5"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="19sp"/>
</LinearLayout>